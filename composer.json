{
  "name": "tourze/quic-core",
  "description": "QUIC协议核心基础库 - 协议常量、错误码、枚举类型和基础工具",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "ext-ctype": "*",
    "ext-hash": "*",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "Tourze\\QUIC\\Core\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tourze\\QUIC\\Core\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}